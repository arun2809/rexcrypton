<% include ../partials/header %>

    <div class="container">
        <div class="row">
            <div class="form_container">
                    <form class="form-width" action="/blogs/<%= blog._id %>?_method=PUT" method="post">
                        <h3>Edit blog</h3>
                        <div class="form-group">
                            <label for="title">Title</label>
                            <input id="pad" id="title" class="form-control" type="text" name="blog[title]" value="<%= blog.title %>">
                        </div>
                        <div class="form-group">
                            <label for="image">Image URL</label>
                            <input id="pad" id="image" class="form-control" type="text" name="blog[image]" value="<%= blog.image %>">
                        </div>
                        <div class="form-group">
                            <label for="body">Blog Body</label>
                            <textarea class="form-control" id="body" name="blog[content]"><%= blog.content %></textarea>
                        </div>
                        <div class="form-group">
                            <button id="pad" class="btn btn-block btn-md btn-primary">Submit</button>
                        </div>
                    </form>
            </div>
        </div>
    </div>

<% include ../partials/footer %>